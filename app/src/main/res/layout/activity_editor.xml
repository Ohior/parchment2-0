<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/note_et_title_id"
        android:layout_toLeftOf="@+id/save_note_btn_id"
        android:hint="@string/enter_title"
        android:autofillHints="@string/app_name"
        android:inputType="text"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/save_note_btn_id"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_note_btn_id"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:text="@string/save"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/note_et_title_id"
        android:background="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_et_detail_id"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:hint="@string/enter_details"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/note_et_title_id"/>

</RelativeLayout>